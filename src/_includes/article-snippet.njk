<li>
    <article>
        <div class="w-3/5">
            <h3>
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h3>
            {% if post.data.tags %}
                <div class="flex flex-wrap my-2">
                    {% for tag in post.data.tags | postTags %}
                        <a href="/tags/{{tag}}" class="category-tag">
                            {{ tag }}
                        </a>
                    {%- endfor -%}
                </div>
            {% endif %}
            <p>
                <span class="text-gray-400">posted: </span>
                {{ post.date | postDate }}
            </p>
            {# <p>
                <span>author: </span>{{ post.data.author }}
            </p> #}
            <hr/>
            <p class="mb-4">{{ post.data.description }}</p>
            <a href="{{ post.url }}" class="btn">Continue Reading &#10140;</a>
        </div>
        <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}" class="object-contain w-2/5"/>
    </article>
</li>
<li>
    <article>
        <div class="w-3/5">
            <h3 class="text-2xl">
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h3>
            <p class="text-lg">
                {{ post.date | postDate }}
            </p>
            {% if post.data.tags %}
                <div class="flex flex-wrap">
                    {% for tag in post.data.tags | postTags %}
                        <a href="/tags/{{tag}}" class="category-tag">
                            {{ tag }}
                        </a>
                    {%- endfor -%}
                </div>
            {% endif %}
            <hr/>
            <p class="mb-4 text-lg h-28 overflow-hidden">{{ post.data.description }}</p>
            <a href="{{ post.url }}" class="btn bg-purple">Continue Reading &#10140;</a>
        </div>
        <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}" class="object-contain w-2/5"/>
    </article>
</li>
{% set currentUrl %}{{ page.url }}{% endset %}

<nav class="py-4 sticky top-0 bg-darkerBg text-grayFont shadow-lg w-full flex justify-center font-semibold z-10">
    <div class="max-w-5xl w-full px-8 mx-auto flex items-center justify-between">
        <a class="flex items-center" href="/">
            <img src="/assets/avatar.png" alt="face photo" width="48px" height="48px" class="mr-6"/>
            <span class="text-white text-xl">Kevin Mathis</span>
        </a>
        <ul class="list-none flex text-lg">
            <li>
                <a class="cursor-pointer text-lg p-2 px-6 ml-4 hover:bg-lightBg {% if page.url === '/' %} text-white {% endif %}" {% if currentUrl === '/' %}aria-current="page"{% endif %} href="/">Home</a>
            </li>
            {% for page in collections.pages | reverse %}
                <li>
                    <a class="cursor-pointer p-2 px-6 ml-4 hover:bg-lightBg {% if page.url === currentUrl %} text-white {% endif %}" 
                    {% if currentUrl === page.url %}
                            aria-current="page"
                        {% endif %} 
                        href="{{ page.url }}"
                    >
                        {{ page.data.menuItem }}
                    </a>
                </li>
            {%- endfor %}
        </ul>
    </div>
</nav>
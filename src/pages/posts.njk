{% endif %} #}

<p class="my-4 text-center">
    {%- for index in renderPages -%}
        <a class="text-2xl px-4 last-of-type:pr-0 no-underline inline-block transform scale-100 {% if index === pagination.pageNumber + 1 %} text-skyBlue scale-150 {% endif %}" href="/posts/page/{{index}}">{{index}}
        </a>
        {% if index === renderPages[numberToDisplay - 1] and index < totalPages %}
            <span>...</span>{% endif %}
    {%- endfor -%}
</p>